<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/makanan_image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/makanan_nama1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mie"
        app:layout_constraintStart_toEndOf="@id/makanan_image1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:textSize="20dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/makanan_harga1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp25.000"
        app:layout_constraintStart_toEndOf="@id/makanan_image1"
        app:layout_constraintTop_toBottomOf="@id/makanan_nama1"
        android:textSize="20dp"
        android:layout_marginStart="10dp" />


</androidx.constraintlayout.widget.ConstraintLayout>